{{> layout/header}}

<div class="container py-3 px-5" style="max-width: 650px;">
    <div class="card mb-4">
        <div class="card-body">
            <form action="/boards" method="get" class="row g-3">
                <div class="col-md-8">
                    <input type="text" class="form-control" name="keyword" value="{{#keyword}}{{keyword}}{{/keyword}}">
                </div>
                <div class="col-md-2">
                    <input type="hidden" name="page" value="1">
                    <input type="hidden" name="size" value="{{boardPage.size}}">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fa-solid fa-magnifying-glass"></i>
                    </button>
                </div>
                <div class="col-md-2">
                    <a href="/boards">
                        <button type="button" class="btn btn-secondary w-100">초기화</button>
                    </a>
                </div>
            </form>
        </div>
    </div>
        {{#boardPage.content}}
            <div class="card mb-3">
                <div class="card-body">
                    <h4 class="card-title mb-3">{{title}}</h4>
                    <p class="text-muted">작성자: {{username}} | 작성일 : {{createdAt}}</p>
                    <div class="d-grid px-2">
                    <a href="/boards/{{id}}" class="btn btn-outline-dark btn-block">글 상세보기</a>
                    </div>
                </div>
            </div>
        {{/boardPage.content}}

    <ul class="pagination d-flex justify-content-center">
        {{#boardPage.previousPageNumber}}
            <li class="page-item">
                <a class="page-link" href="/boards?page={{boardPage.previousPageNumber}}">Previous</a>
            </li>
        {{/boardPage.previousPageNumber}}
        {{^boardPage.previousPageNumber}}
            <li class="page-item disabled">
                <a class="page-link" href="#">Previous</a>
            </li>
        {{/boardPage.previousPageNumber}}

        {{#boardPage.pageLinks}}
            <li class="page-item {{#active}}active{{/active}}">
                <a class="page-link" href="/?page={{displayNumber}}&size={{boardPage.size}}">{{displayNumber}}</a>
            </li>
        {{/boardPage.pageLinks}}

        {{#boardPage.nextPageNumber}}
            <li class="page-item">
                <a class="page-link" href="/boards?page={{boardPage.nextPageNumber}}">Next</a>
            </li>
        {{/boardPage.nextPageNumber}}
        {{^boardPage.nextPageNumber}}
            <li class="page-item disabled">
                <a class="page-link" href="#">Next</a>
            </li>
        {{/boardPage.nextPageNumber}}
    </ul>

</div>

{{> layout/footer}}