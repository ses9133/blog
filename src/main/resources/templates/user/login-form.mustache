{{> layout/header}}

<div class="container d-flex justify-content-center p-5">
    <div class="card login-card">
        <div class="card-header login-header"><b>로그인을 해주세요</b></div>
        <div class="card-body d-flex flex-column">
            <form action="/login" method="post" enctype="application/x-www-form-urlencoded">
                <div class="mb-3">
                    <input type="text" class="form-control" placeholder="Enter username" name="username">
                </div>
                <div class="mb-3">
                    <input type="password" class="form-control" placeholder="Enter password" name="password">
                </div>
                <div class="mb-3 pb-3 border-bottom border-muted">
                    <button type="submit" class="btn btn-secondary form-control">로그인</button>
                </div>

                <div class="px-5">
                <a href="https://kauth.kakao.com/oauth/authorize?response_type=code&client_id=8b05c4bde437eac94888ca26026a6a33&redirect_uri=http://localhost:8080/user/kakao">
                     <span>
                        <img src="/img/kakao_login.png" alt="카카오 로그인 버튼" class="login-btn">
                     </span>
                </a>
                </div>
                <div class="px-5 py-2">
                <a href="/login/naver">
                    <span>
                        <img src="/img/naver.png" alt="네이버 로그인 버튼" class="login-btn naver">
                    </span>
                </a>
                </div>


            </form>
        </div>
    </div>
</div>

{{> layout/footer}}