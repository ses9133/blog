{{> layout/header}}
<div class="container p-5 common-container">

    <div class="card">
        <div class="card-header">
            <b>회원정보를 수정해주세요</b>
        </div>

        {{#user}}
        <div class="card-body">
            <div class="text-center mb-4">
                {{#profileImage}}
                    <img src="{{user.profilePath}}" alt="프로필사진" class="rounded-circle border profile-image-box">
                {{/profileImage}}
                {{^profileImage}}
                    <div class="rounded-circle bg-secondary d-inline-flex align-items-center justify-content-center border profile-image-box">
                        <span class="text-white fs-5">프로필 사진 없음</span>
                    </div>
                {{/profileImage}}
            </div>
        </div>

        <div class="card-body">
            <form id="updateForm" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label">이름</label>
                    <span class="form-control text-muted opacity-75">{{username}}</span>
                </div>

                {{#isLocal}}
                <div class="mb-3">
                    <label class="form-label">비밀번호</label>
                    <input type="password" class="form-control" placeholder="Enter password" name="password" required>
                </div>
                {{/isLocal}}
                <div class="mb-3">
                    <label class="form-label">이메일</label>
                    <span class="form-control text-muted opacity-75">{{email}}</span>
                </div>
                <div class="mb-3">
                    <label for="profileImage" class="form-label">프로필 사진(선택사항)</label>
                    <input type="file" class="form-control" id="profileImage" name="profileImage" accept="image/*">
                    <small class="form-text text-muted mt-1">이미지 파일만 업로드 가능합니다(JPG, PNG, GIF)</small>
                </div>
                <button type="button" class="btn btn-primary form-control" onclick="updateUser()">회원정보수정</button>
            </form>
        </div>
        {{/user}}
    </div>
</div>

<script src="/js/user/update.js"></script>

{{> layout/footer}}